<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.senai.crudjavafx.controller.HomeController">
    <children>
        <ImageView fitHeight="500.0" fitWidth="850.0" pickOnBounds="true">
            <image>
                <Image url="@images/fabrizio-conti-kXVogATbFgA-unsplash.jpg" />
            </image>
        </ImageView>

        <BorderPane fx:id="root" prefHeight="500.0" prefWidth="850.0" style="-fx-background-color: transparent;">
            <left>
                <Button mnemonicParsing="false" onAction="#irParaClientes" prefHeight="180.0" prefWidth="150.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 14; -fx-border-radius: 14; -fx-border-color: white; -fx-border-width: 1;" text="Cadastrar   Clientes" textAlignment="CENTER" textFill="WHITE" wrapText="true" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="140.0" />
                    </BorderPane.margin>
                    <effect>
                        <DropShadow blurType="GAUSSIAN">
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" />
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font size="15.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </Button>
            </left>

            <center>
                <Button mnemonicParsing="false" onAction="#irParaProdutos" prefHeight="180.0" prefWidth="150.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 14; -fx-border-radius: 14; -fx-border-color: white; -fx-border-width: 1;" text="Cadastrar Produtos" textAlignment="CENTER" textFill="WHITE" wrapText="true" BorderPane.alignment="CENTER">
                    <effect>
                        <DropShadow blurType="GAUSSIAN">
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" />
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font size="15.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </center>

            <right>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#irParaVendas" prefHeight="180.0" prefWidth="150.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 14; -fx-border-radius: 14; -fx-border-color: white; -fx-border-width: 1;" text="Nova Venda" textFill="WHITE" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets right="120.0" />
                    </BorderPane.margin>
                    <effect>
                        <DropShadow blurType="GAUSSIAN">
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" />
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font size="15.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </right>

            <bottom>
                <Button mnemonicParsing="false" onAction="#irParaRelatorios" prefHeight="40.0" prefWidth="550.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-border-radius: 14; -fx-background-radius: 14; -fx-border-color: white; -fx-border-width: 1;" text="Registro de Vendas" textFill="WHITE" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="60.0" />
                    </BorderPane.margin>
                    <effect>
                        <DropShadow blurType="GAUSSIAN" radius="8.535" spread="0.1" width="15.14">
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" />
                            </color>
                        </DropShadow>
                    </effect>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
