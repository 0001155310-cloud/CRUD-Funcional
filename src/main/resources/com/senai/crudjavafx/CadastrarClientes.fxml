<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.senai.crudjavafx.controller.ClientesController">
    <children>
        <BorderPane fx:id="root" prefHeight="500.0" prefWidth="850.0" style="-fx-background-color: linear-gradient(to top, #050b14 0%, #0b1c2d 45%, #12263a 100%);">
            <left>
                <TableView fx:id="tabelaClientes" onMouseClicked="#selecionarItem" prefHeight="420.0" prefWidth="480.0" style="-fx-background-color: linear-gradient(to bottom, rgba(221, 221, 221), #0f172a); -fx-background-radius: 12;" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="colNome" prefWidth="120.0" text="Nome" />
                        <TableColumn fx:id="colCpf" prefWidth="90.0" text="CPF/CNPJ" />
                        <TableColumn fx:id="colTelefone" prefWidth="90.0" text="Telefone" />
                        <TableColumn fx:id="colEmail" prefWidth="120.0" text="E-mail" />
                    </columns>
                    <effect>
                        <DropShadow />
                    </effect>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="15.0" top="15.0" />
                    </BorderPane.margin>
                </TableView>
            </left>

            <bottom>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="850.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#excluirCliente" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #7f1d1d; -fx-background-radius: 10;" text="Excluir" textFill="WHITE">
                            <font><Font name="System Bold" size="12.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                            <effect><DropShadow /></effect>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#limparCampos" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #334155; -fx-background-radius: 10;" text="Limpar" textFill="WHITE">
                            <font><Font name="System Bold" size="12.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                            <effect><DropShadow /></effect>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="15.0" />
                    </padding>
                </HBox>
            </bottom>

            <right>
                <Pane prefHeight="425.0" prefWidth="320.0" style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 2;" BorderPane.alignment="CENTER">
                    <children>
                        <Text fill="WHITE" layoutX="60.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cadastro de Cliente" textAlignment="CENTER">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Text>

                        <Label layoutX="20.0" layoutY="70.0" text="Nome:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtNome" layoutX="90.0" layoutY="66.0" prefHeight="27.0" prefWidth="210.0" promptText="Nome completo..." style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Label layoutX="20.0" layoutY="110.0" text="CPF:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtCpf" layoutX="90.0" layoutY="106.0" prefHeight="27.0" prefWidth="210.0" promptText="000.000.000-00" style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Label layoutX="20.0" layoutY="150.0" text="Telefone:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtTelefone" layoutX="90.0" layoutY="146.0" prefHeight="27.0" prefWidth="210.0" promptText="(00) 00000-0000" style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Label layoutX="20.0" layoutY="190.0" text="E-mail:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtEmail" layoutX="90.0" layoutY="186.0" prefHeight="27.0" prefWidth="210.0" promptText="exemplo@email.com" style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Label layoutX="20.0" layoutY="230.0" text="Endereço:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtEndereco" layoutX="90.0" layoutY="226.0" prefHeight="27.0" prefWidth="210.0" promptText="Rua, número, bairro..." style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Button layoutX="82.0" layoutY="350.0" mnemonicParsing="false" onAction="#salvarCliente" prefHeight="35.0" prefWidth="156.0" style="-fx-background-color: #1e40af; -fx-border-color: white; -fx-border-radius: 20; -fx-background-radius: 20;" text="Salvar Cliente" textFill="WHITE">
                            <font><Font name="System Bold" size="14.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                            <effect><DropShadow /></effect>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets right="15.0" top="15.0" />
                    </BorderPane.margin>
                </Pane>
            </right>
        </BorderPane>
    </children>
</AnchorPane>