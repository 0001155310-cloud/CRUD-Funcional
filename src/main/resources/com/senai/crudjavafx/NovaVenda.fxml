                        <TextField fx:id="txtPrecoUnitario" editable="false" layoutX="95.0" layoutY="156.0" prefHeight="27.0" prefWidth="205.0" style="-fx-background-color: #0f172a; -fx-text-fill: #10b981; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" text="R$ 0.00">
                            <font><Font name="System Bold" size="12.0" /></font></TextField>

                        <Label layoutX="20.0" layoutY="205.0" text="Qtd:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtQuantidade" layoutX="95.0" layoutY="201.0" onKeyReleased="#calcularTotal" prefHeight="27.0" prefWidth="205.0" promptText="Ex: 5" style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" />

                        <Label layoutX="20.0" layoutY="250.0" text="Total:" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                        <TextField fx:id="txtTotalVenda" editable="false" layoutX="95.0" layoutY="246.0" prefHeight="27.0" prefWidth="205.0" style="-fx-background-color: #0f172a; -fx-text-fill: #fbbf24; -fx-border-color: white; -fx-border-radius: 12; -fx-background-radius: 12;" text="R$ 0.00">
                            <font><Font name="System Bold" size="14.0" /></font></TextField>

                        <Button layoutX="82.0" layoutY="350.0" mnemonicParsing="false" onAction="#finalizarVenda" prefHeight="35.0" prefWidth="156.0" style="-fx-background-color: #1e40af; -fx-border-color: white; -fx-border-radius: 20; -fx-background-radius: 20;" text="Finalizar Venda" textFill="WHITE">
                            <font><Font name="System Bold" size="14.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                            <effect><DropShadow /></effect>
                        </Button>
                    </children>
                    <BorderPane.margin><Insets right="15.0" top="15.0" /></BorderPane.margin>
                </Pane>
            </right>
        </BorderPane>
    </children>
</AnchorPane>
